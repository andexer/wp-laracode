<?php

namespace {{namespace}}\Console\Commands;

use Illuminate\Console\Command;
use Illuminate\Filesystem\Filesystem;
use Illuminate\Support\Str;

class MakeControllerCommand extends Command
{
    protected $signature = 'make:controller
        {name? : The name of the controller}
        {--invokable : Generate a single method, invokable controller}
        {--resource : Generate a resource controller}
        {--api : Generate an API resource controller}
        {--model= : The model that the controller controls}';

    protected $description = 'Create a new controller class';

    protected Filesystem $filesystem;

    public function __construct(Filesystem $filesystem)
    {
        parent::__construct();
        $this->filesystem = $filesystem;
    }

    public function handle(): int
    {
        $name = $this->argument('name');

        if (!$name) {
            $name = $this->ask('What is the name of the controller?');
        }

        if (empty($name)) {
            $this->error('Controller name is required.');
            return Command::FAILURE;
        }

        // Normalize name for subdirectories
        $name = str_replace(['/', '\\'], '/', $name);
        $pathParts = explode('/', $name);
        $className = array_pop($pathParts);
        $relativePath = implode('/', $pathParts);

        // Determine Namespace
        $namespace = '{{namespace}}\Http\Controllers';
        if (!empty($pathParts)) {
            $namespace .= '\\' . implode('\\', $pathParts);
        }

        // Determine destination path
        $path = {{constantPrefix}}_PATH . 'app/Http/Controllers/' . ($relativePath ? $relativePath . '/' : '') . $className . '.php';

        // Normalize class name for studly case (just the class name part)
        $className = Str::studly($className);

        // Final Path update with studly filename
        $path = {{constantPrefix}}_PATH . 'app/Http/Controllers/' . ($relativePath ? $relativePath . '/' : '') . $className . '.php';

        $this->ensureDirectoryExists(dirname($path));

        if ($this->filesystem->exists($path)) {
            $this->error("âŒ Controller [{$className}] already exists!");
            return Command::FAILURE;
        }

        // Generate Content
        $modelName = $this->option('model');

        if ($this->option('invokable')) {
            $content = $this->getInvokableStub($namespace, $className);
        } elseif ($this->option('api')) {
            $content = $this->getApiStub($namespace, $className, $modelName);
        } elseif ($this->option('resource')) {
            $content = $this->getResourceStub($namespace, $className, $modelName);
        } else {
            $content = $this->getPlainStub($namespace, $className);
        }

        $this->filesystem->put($path, $content);

        $relativePath = str_replace({{constantPrefix}}_PATH, '', $path);
        $this->info("âœ… Controller [{$className}] created successfully.");
        $this->line("ğŸ“ Location: <comment>{$relativePath}</comment>");
        
        return Command::SUCCESS;
    }

    protected function ensureDirectoryExists(string $path): void
    {
        if (!$this->filesystem->isDirectory($path)) {
            $this->filesystem->makeDirectory($path, 0755, true);
        }
    }

